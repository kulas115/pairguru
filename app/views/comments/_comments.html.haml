.row
  .col-md-6
    %h3 This movie has #{pluralize(@comments.count, "comment")}
    %br
- @comments.each do |comment|
  .row
    .col-md-6
      .panel.panel-default
        .panel-heading
          %p Comment posted by <strong>#{comment.user.name}</strong> <strong>#{distance_of_time_in_words(comment.created_at, Time.now)}</strong> ago
          - if current_user == comment.user
            = link_to 'Delete', movie_comment_path(comment.movie, comment), method: :delete, class: "btn btn-primary"
            = link_to 'Edit', edit_movie_comment_path(comment.movie, comment), class: "btn btn-primary"
        .panel-body
          = comment.content


= render 'comments/form'
